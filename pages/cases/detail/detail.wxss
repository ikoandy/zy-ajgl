/* pages/cases/detail/detail.wxss */
.case-detail-container {
  padding: 20rpx;
  background-color: #f7fafc;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 案件基本信息卡片 */
.case-header-card {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 24rpx;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
  border: 1px solid #e2e8f0;
}

.case-basic-info {
  margin-bottom: 20rpx;
}

.case-title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.case-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-right: 16rpx;
}

.priority-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 700;
  margin-left: 12rpx;
}

.priority-badge.high {
  background-color: #feb2b2;
  color: #e53e3e;
}

.priority-badge.normal {
  background-color: #faf089;
  color: #d69e2e;
}

.priority-badge.low {
  background-color: #9ae6b4;
  color: #38a169;
}

.case-status-section {
  display: flex;
  align-items: center;
}

.case-status-label {
  font-size: 26rpx;
  color: #718096;
  margin-right: 8rpx;
}

.case-status {
  /* 统一基础样式 */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 600;
  height: 36rpx;
  border-radius: 18rpx;
  border: 1px solid transparent;
  padding: 0 18rpx;
  margin: 0;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  min-width: 88rpx;
  line-height: 1;
}

/* 统一状态样式 */
.case-status.pending,
.case-status[data-status="pending"] {
  background-color: #fffaf0;
  color: #d69e2e;
  border-color: #ecc94b;
}

.case-status.processing,
.case-status[data-status="processing"] {
  background-color: #ebf8ff;
  color: #1a365d;
  border-color: #bee3f8;
}

.case-status.completed,
.case-status[data-status="completed"] {
  background-color: #f0fff4;
  color: #38a169;
  border-color: #48bb78;
}

.case-status.closed,
.case-status[data-status="closed"] {
  background-color: #edf2f7;
  color: #718096;
  border-color: #cbd5e0;
}

.case-meta-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #edf2f7;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 24rpx;
  color: #718096;
  min-width: 100rpx;
}

.meta-value {
  font-size: 24rpx;
  color: #2d3748;
}

.case-progress-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #718096;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-bar {
  height: 12rpx;
  background-color: #edf2f7;
  border-radius: 6rpx;
  overflow: hidden;
  border: 1px solid #e2e8f0;
}

.progress-fill {
  height: 100%;
  background-color: #1a365d;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #1a365d;
  text-align: right;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  background-color: #1a365d !important;
  color: #ffffff !important;
  border-radius: 8px !important;
  transition: all 0.3s ease !important;
  line-height: 80rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box !important;
}

.action-button::after {
  border: none !important;
  border-radius: 8px !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  transform: none !important;
}

.action-button:active {
  background-color: #2c5282 !important;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06) !important;
}

/* 标签切换 */
.tab-container {
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  overflow: hidden;
  border: 1px solid #e2e8f0;
}

.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #edf2f7;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #718096;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1a365d;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1a365d;
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  padding: 24rpx;
}

/* 信息标签内容 */
.info-section {
  margin-bottom: 32rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 16rpx;
  display: block;
}

.section-content {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.75;
}

.client-info-item, .detail-item {
  display: flex;
  margin-bottom: 12rpx;
}

.client-info-item:last-child, .detail-item:last-child {
  margin-bottom: 0;
}

.info-label, .detail-label {
  min-width: 120rpx;
  color: #a0aec0;
}

.info-value, .detail-value {
  color: #2d3748;
  flex: 1;
}

/* 文档标签内容 */
.documents-section {
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.add-button, .contact-button {
  height: 64rpx !important;
  font-size: 24rpx !important;
  padding: 0 24rpx !important;
  background-color: #1a365d !important;
  color: #ffffff !important;
  border-radius: 8px !important;
  transition: all 0.3s ease !important;
  line-height: 64rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box !important;
}

.add-button::after, .contact-button::after {
  border: none !important;
  border-radius: 8px !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
  transform: none !important;
}

.add-button:active, .contact-button:active {
  background-color: #2c5282 !important;
}

.documents-list, .messages-list, .progress-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.document-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f7fafc;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 1px solid #e2e8f0;
}

.document-item:active {
  background-color: #edf2f7;
}

.document-info {
  flex: 1;
  margin-right: 16rpx;
}

.document-type-badge {
  display: inline-block;
  padding: 2rpx 12rpx;
  background-color: #ebf8ff;
  color: #3182ce;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 12rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
}

.document-name {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.document-meta {
  font-size: 22rpx;
  color: #a0aec0;
  display: block;
}

.document-icon-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.document-icon-text {
  font-size: 24rpx;
  font-weight: var(--font-weight-bold);
  color: var(--background-white);
  line-height: 1;
}

.document-item:active .document-icon-circle {
  background-color: var(--primary-light);
  transform: scale(0.95);
}

/* 沟通记录标签内容 */
.messages-section {
  width: 100%;
}

.message-item {
  padding: 20rpx;
  background-color: #f7fafc;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 1px solid #e2e8f0;
}

.message-item:active {
  background-color: #edf2f7;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.message-sender {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3748;
}

.message-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.message-content {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.75;
}

/* 进度记录标签内容 */
.progress-section {
  width: 100%;
}

.progress-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #edf2f7;
}

.progress-item:last-child {
  border-bottom: none;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1a365d;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.progress-content {
  flex: 1;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.progress-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
}

.progress-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.progress-description {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
  line-height: 1.75;
}

.progress-changes {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #a0aec0;
}

.change-label {
  margin-right: 8rpx;
}

.change-value {
  color: #1a365d;
  font-weight: 500;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #718096;
}

.loading text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #a0aec0;
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty text {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

/* 固定按钮容器 */
.fixed-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
  display: flex;
  justify-content: center;
}

/* 编辑按钮 */
.edit-button {
  width: 80%;
  max-width: 600rpx;
  height: 80rpx !important;
  border-radius: 40rpx !important;
  background-color: #1a365d !important;
  color: #ffffff !important;
  border: none !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  box-shadow: 0 4rpx 16rpx rgba(26, 54, 93, 0.3) !important;
  line-height: 80rpx !important;
  box-sizing: border-box !important;
}

.edit-button::after {
  border: none !important;
  border-radius: 40rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  transform: none !important;
}

.edit-button:active {
  transform: scale(0.98) !important;
  box-shadow: 0 2rpx 8rpx rgba(26, 54, 93, 0.4) !important;
}
