/* pages/documents/upload/upload.wxss */
.upload-container {
  padding: 20px;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 通用区块样式 */
.section {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  padding: 24px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-light);
}

.section-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

/* 上传区域 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px dashed var(--border-color);
  border-radius: var(--radius-lg);
  padding: 60px 20px;
  background-color: #fafafa;
  margin-bottom: 24px;
  transition: all 0.3s;
}

.upload-area:active {
  background-color: #f0f0f0;
  border-color: var(--border-dark);
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24px;
  opacity: 0.5;
}

.upload-text {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin-bottom: 8px;
  text-align: center;
}

.upload-hint {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  text-align: center;
}

/* 文件列表 */
.file-list {
  margin-bottom: 24px;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 20px;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  margin-bottom: 16px;
  box-shadow: var(--shadow-sm);
}

.file-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-sm);
  background-color: var(--border-light);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16px;
  flex-shrink: 0;
}

.file-info {
  flex: 1;
  margin-right: 16px;
}

.file-name {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-meta {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
}

.progress-bar {
  width: 100%;
  height: 8px;
  background-color: var(--border-light);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-top: 12px;
}

.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: var(--radius-full);
  transition: width 0.3s ease;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

/* 表单字段 */
.form-field {
  margin-bottom: 24px;
}

.field-label {
  display: block;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 12px;
}

.input-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
}

.input-field::placeholder {
  color: var(--text-tertiary);
}

.textarea-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  min-height: 120px;
  resize: vertical;
}

.textarea-field::placeholder {
  color: var(--text-tertiary);
}

/* 选择器 */
.select-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16px;
  margin-top: 40px;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-base);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
  border: none;
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: var(--border-light);
  color: var(--text-secondary);
  border: none;
}

.btn-secondary:active {
  background-color: var(--border-color);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: var(--text-secondary);
}

.loading text {
  margin-top: 20px;
  font-size: var(--font-size-sm);
}

/* 错误提示 */
.error-message {
  color: var(--error-color);
  font-size: var(--font-size-sm);
  margin-top: 8px;
}
