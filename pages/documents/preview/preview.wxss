/* pages/documents/preview/preview.wxss */
.preview-container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 文档头部信息 */
.document-header {
  background-color: var(--background-white);
  border-bottom: 1px solid var(--border-color);
  padding: 20px;
  margin-bottom: 0;
}

.document-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 12px;
  line-height: 1.4;
}

.document-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  margin-bottom: 16px;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.meta-label {
  margin-right: 8px;
  color: var(--text-tertiary);
}

.meta-value {
  color: var(--text-primary);
}

/* 操作按钮栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--background-white);
  border-bottom: 1px solid var(--border-color);
  padding: 16px 20px;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
}

.left-actions, .right-actions {
  display: flex;
  gap: 16px;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 20px;
  background-color: var(--border-light);
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  transition: all 0.3s;
}

.action-btn:active {
  background-color: var(--border-color);
  transform: scale(0.98);
}

.action-btn.primary {
  background-color: var(--primary-color);
  color: white;
}

.action-btn.primary:active {
  background-color: var(--primary-dark);
}

/* 预览内容区域 */
.preview-content {
  background-color: var(--background-white);
  padding: 20px;
  min-height: calc(100vh - 200rpx);
  overflow: auto;
}

/* 文档内容 */
.doc-content {
  font-size: var(--font-size-base);
  line-height: 1.6;
  color: var(--text-primary);
}

.doc-content h1 {
  font-size: var(--font-size-h2);
  font-weight: var(--font-weight-bold);
  margin: 32px 0 16px;
  color: var(--text-primary);
}

.doc-content h2 {
  font-size: var(--font-size-h3);
  font-weight: var(--font-weight-semibold);
  margin: 24px 0 12px;
  color: var(--text-primary);
}

.doc-content h3 {
  font-size: var(--font-size-h4);
  font-weight: var(--font-weight-semibold);
  margin: 20px 0 10px;
  color: var(--text-primary);
}

.doc-content p {
  margin: 16px 0;
  color: var(--text-primary);
}

.doc-content ul, .doc-content ol {
  margin: 16px 0;
  padding-left: 24px;
}

.doc-content li {
  margin: 8px 0;
  color: var(--text-primary);
}

.doc-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 20px 0;
}

.doc-content th, .doc-content td {
  border: 1px solid var(--border-color);
  padding: 12px 16px;
  text-align: left;
  color: var(--text-primary);
}

.doc-content th {
  background-color: var(--background-color);
  font-weight: var(--font-weight-semibold);
}

.doc-content tr:nth-child(even) {
  background-color: #fafafa;
}

/* 图片样式 */
.doc-content img {
  max-width: 100%;
  height: auto;
  border-radius: var(--radius-base);
  margin: 20px 0;
}

/* 分隔线 */
.doc-content hr {
  border: none;
  border-top: 1px solid var(--border-color);
  margin: 32px 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  background-color: var(--background-white);
}

.loading-text {
  margin-top: 20px;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  background-color: var(--background-white);
  padding: 40px 20px;
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20px;
  opacity: 0.5;
}

.error-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 12px;
}

.error-message {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 24px;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: var(--background-white);
  border-top: 1px solid var(--border-color);
  padding: 16px 20px;
  box-shadow: 0 -1px 3px 0 rgba(0, 0, 0, 0.1);
}

.bottom-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px;
  border-radius: var(--radius-base);
  transition: all 0.3s;
}

.bottom-action:active {
  background-color: var(--background-color);
  transform: scale(0.95);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.7;
}

.action-text {
  font-size: var(--font-size-xs);
  color: var(--text-primary);
}

/* 目录侧边栏 */
.toc-sidebar {
  position: fixed;
  right: 0;
  top: 0;
  width: 280px;
  height: 100vh;
  background-color: var(--background-white);
  border-left: 1px solid var(--border-color);
  padding: 20px;
  overflow-y: auto;
  z-index: 200;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.toc-sidebar.show {
  transform: translateX(0);
}

.toc-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid var(--border-light);
}

.toc-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.toc-item {
  margin-bottom: 8px;
}

.toc-link {
  display: block;
  padding: 8px 12px;
  border-radius: var(--radius-sm);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-decoration: none;
  transition: all 0.3s;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.toc-link:hover {
  background-color: var(--background-color);
  color: var(--primary-color);
}

.toc-link.active {
  background-color: var(--border-light);
  color: var(--primary-color);
  font-weight: var(--font-weight-medium);
}

/* 遮罩层 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 150;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.overlay.show {
  opacity: 1;
  visibility: visible;
}
