/* pages/schedule/calendar/calendar.wxss */

/* 日历容器 */
.calendar-container {
  background-color: #f7fafc;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #1a365d;
  color: white;
  padding: 20rpx 32rpx;
  height: 88rpx;
  box-sizing: border-box;
}

.back-button, .nav-right {
  font-size: 28rpx;
  color: white;
  cursor: pointer;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* 日期选择器 */
.date-picker {
  background-color: white;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

/* 事件列表 */
.events-list {
  flex: 1;
  padding: 0 24rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 24rpx;
  display: block;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #1a365d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.empty-text {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 24rpx;
}

.create-btn {
  background-color: #1a365d;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx 32rpx;
}

/* 事件列表 */
.event-items {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

/* 事件项 */
.event-item {
  display: flex;
  padding: 24rpx;
  border-bottom: 1px solid #edf2f7;
}

.event-item:last-child {
  border-bottom: none;
}

/* 事件类型 */
.event-type {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  height: 36rpx;
  border-radius: 18rpx;
  border: 1px solid transparent;
  padding: 0 16rpx;
  margin-right: 24rpx;
  margin-top: 16rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.event-type[data-type=work] {
  background-color: #ebf8ff;
  color: #1a365d;
  border-color: #bee3f8;
}

.event-type[data-type=meeting] {
  background-color: #f0fff4;
  color: #38a169;
  border-color: #9ae6b4;
}

/* 事件内容 */
.event-content {
  flex: 1;
}

/* 事件头部 */
.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.event-title {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 600;
  flex: 1;
  margin-right: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 事件状态 */
.event-status {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  height: 36rpx;
  border-radius: 18rpx;
  border: 1px solid transparent;
  padding: 0 16rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.event-status[data-status=pending] {
  background-color: #fffaf0;
  color: #d69e2e;
  border-color: #ecc94b;
}

.event-status[data-status=processing] {
  background-color: #ebf8ff;
  color: #1a365d;
  border-color: #bee3f8;
}

.event-status[data-status=completed] {
  background-color: #f0fff4;
  color: #38a169;
  border-color: #9ae6b4;
}

/* 事件元数据 */
.event-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.event-time, .event-location {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

/* 事件描述 */
.event-description {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
