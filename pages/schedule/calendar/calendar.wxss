/* pages/schedule/calendar/calendar.wxss */
.calendar-container {
  padding: 20px;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 日历头部 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  padding: 20px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.month-nav {
  display: flex;
  align-items: center;
  gap: 16px;
}

.nav-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--border-light);
  border-radius: 50%;
  transition: all 0.3s;
}

.nav-btn:active {
  background-color: var(--border-color);
  transform: scale(0.95);
}

.month-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.current-date {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  background-color: var(--border-light);
  padding: 8px 16px;
  border-radius: var(--radius-full);
}

/* 日历主体 */
.calendar-body {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
  overflow: hidden;
}

/* 星期栏 */
.weekdays {
  display: flex;
  background-color: var(--background-color);
  border-bottom: 1px solid var(--border-color);
}

.weekday {
  flex: 1;
  padding: 16px;
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--text-secondary);
}

/* 日期网格 */
.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 1px;
  background-color: var(--border-color);
}

.day-cell {
  background-color: var(--background-white);
  padding: 16px 8px;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  position: relative;
}

.day-cell:hover {
  background-color: var(--background-color);
}

.day-cell.other-month {
  color: var(--text-disabled);
}

.day-cell.today {
  background-color: var(--border-light);
}

.day-cell.today::before {
  content: '';
  position: absolute;
  top: 8px;
  right: 8px;
  width: 8px;
  height: 8px;
  background-color: var(--primary-color);
  border-radius: 50%;
}

.day-number {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 8px;
}

.day-cell.other-month .day-number {
  color: var(--text-disabled);
}

/* 事件点 */
.events {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  width: 100%;
  overflow: hidden;
}

.event-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  margin-bottom: 2px;
}

.event-dot.primary {
  background-color: var(--primary-color);
}

.event-dot.success {
  background-color: var(--success-color);
}

.event-dot.warning {
  background-color: var(--warning-color);
}

.event-dot.danger {
  background-color: var(--error-color);
}

/* 当日事件列表 */
.today-events {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  padding: 24px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-light);
}

.section-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.section-more {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

/* 事件列表 */
.event-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.event-item {
  display: flex;
  gap: 16px;
  padding: 16px;
  background-color: var(--background-color);
  border-radius: var(--radius-base);
  transition: all 0.3s;
  border-left: 4px solid transparent;
}

.event-item:active {
  background-color: var(--border-light);
  transform: scale(0.98);
}

.event-item.primary {
  border-left-color: var(--primary-color);
}

.event-item.success {
  border-left-color: var(--success-color);
}

.event-item.warning {
  border-left-color: var(--warning-color);
}

.event-item.danger {
  border-left-color: var(--error-color);
}

.event-time {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  min-width: 80px;
  flex-shrink: 0;
}

.event-content {
  flex: 1;
  min-width: 0;
}

.event-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.event-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 悬浮添加按钮 */
.floating-add-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(26, 54, 93, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  z-index: 100;
}

.floating-add-button::after {
  border: none;
  border-radius: 50%;
}

.floating-add-button:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 12rpx rgba(26, 54, 93, 0.2);
}

.plus-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: var(--text-secondary);
}

.loading text {
  margin-top: 20px;
  font-size: var(--font-size-sm);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: var(--text-secondary);
  text-align: center;
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty text {
  font-size: var(--font-size-sm);
  margin-bottom: 8px;
}

.empty-hint {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-top: 8px;
}

/* 事件详情弹窗 */
.event-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.event-popup.show {
  opacity: 1;
  visibility: visible;
}

.popup-content {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  padding: 24px;
  width: 90%;
  max-width: 500px;
  max-height: 80vh;
  overflow-y: auto;
  transform: translateY(20px);
  transition: all 0.3s ease;
}

.event-popup.show .popup-content {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-light);
}

.popup-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  transition: all 0.3s;
}

.close-btn:active {
  opacity: 1;
  transform: scale(0.9);
}

/* 视图切换 */
.view-switcher {
  display: flex;
  gap: 12px;
  margin-bottom: 24px;
}

.view-btn {
  flex: 1;
  padding: 12px 16px;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--text-secondary);
  transition: all 0.3s;
  text-align: center;
}

.view-btn.active {
  background-color: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.view-btn:active {
  transform: scale(0.98);
}
