/* pages/schedule/task/task.wxss */
.task-container {
  padding: 20px;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 通用区块样式 */
.section {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 24px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-light);
}

.section-title {
  font-size: 16px;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

/* 表单样式 */
.task-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.field-label {
  font-size: 16px;
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
}

.field-hint {
  font-size: 14px;
  color: var(--text-tertiary);
  margin-top: -8px;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-size: 16px;
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  transition: all 0.3s;
}

.input-field:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.input-field::placeholder {
  color: var(--text-tertiary);
}

/* 多行文本框 */
.textarea-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-size: 16px;
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  min-height: 120px;
  resize: vertical;
  transition: all 0.3s;
}

.textarea-field:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.textarea-field::placeholder {
  color: var(--text-tertiary);
}

/* 日期时间选择器 */
.datetime-field {
  display: flex;
  gap: 16px;
  align-items: center;
}

.datetime-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.picker-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-size: 16px;
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.picker-field:active {
  background-color: var(--background-light);
  border-color: var(--border-dark);
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 优先级选择 */
.priority-selector {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.priority-option {
  flex: 1;
  min-width: 120px;
  padding: 16px;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  transition: all 0.3s;
}

.priority-option:hover {
  border-color: var(--border-dark);
  background-color: var(--background-light);
}

.priority-option.selected {
  border-color: var(--primary-color);
  background-color: var(--primary-50);
}

.priority-option.high.selected {
  border-color: var(--error-color);
  background-color: var(--error-50);
}

.priority-option.medium.selected {
  border-color: var(--warning-color);
  background-color: var(--warning-50);
}

.priority-option.low.selected {
  border-color: var(--success-color);
  background-color: var(--success-50);
}

.priority-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.priority-dot.high {
  background-color: var(--error-color);
}

.priority-dot.medium {
  background-color: var(--warning-color);
}

.priority-dot.low {
  background-color: var(--success-color);
}

.priority-label {
  font-size: 14px;
  font-weight: var(--font-weight-medium);
  color: var(--text-secondary);
}

/* 标签选择 */
.tags-selector {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.tag-option {
  padding: 10px 20px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-full);
  font-size: 14px;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.3s;
}

.tag-option:hover {
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.tag-option.selected {
  background-color: var(--primary-color);
  color: var(--background-white);
  border-color: var(--primary-color);
}

/* 开关样式 */
.switch-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background-color: var(--background-light);
  border-radius: var(--radius-lg);
}

.switch-label {
  font-size: 16px;
  color: var(--text-primary);
  font-weight: var(--font-weight-medium);
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16px;
  margin-top: 24px;
  margin-bottom: 40px;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-lg);
  font-size: 16px;
  font-weight: var(--font-weight-medium);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--background-white);
}

.btn-primary:active {
  background-color: var(--primary-light);
  transform: scale(0.98);
}

.btn-secondary {
  background-color: var(--secondary-100);
  color: var(--text-secondary);
}

.btn-secondary:active {
  background-color: var(--border-color);
  transform: scale(0.98);
}

.btn-danger {
  background-color: var(--error-color);
  color: var(--background-white);
}

.btn-danger:active {
  background-color: var(--error-dark);
  transform: scale(0.98);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: var(--text-secondary);
}

.loading text {
  margin-top: 20px;
  font-size: 14px;
}

/* 错误状态 */
.error-message {
  background-color: var(--error-50);
  border-left: 4px solid var(--error-color);
  padding: 16px;
  border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
  margin-bottom: 24px;
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

.error-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 2px;
  opacity: 0.8;
}

.error-text {
  flex: 1;
  font-size: 14px;
  color: var(--error-dark);
  line-height: 1.5;
}

/* 成功状态 */
.success-message {
  background-color: var(--success-50);
  border-left: 4px solid var(--success-color);
  padding: 16px;
  border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
  margin-bottom: 24px;
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

.success-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 2px;
  opacity: 0.8;
}

.success-text {
  flex: 1;
  font-size: 14px;
  color: var(--success-dark);
  line-height: 1.5;
}

/* 任务详情样式 */
.task-detail {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 24px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16px 0;
  border-bottom: 1px solid var(--border-light);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 14px;
  font-weight: var(--font-weight-medium);
  color: var(--text-secondary);
  margin-right: 24px;
  min-width: 100px;
}

.detail-value {
  flex: 1;
  font-size: 14px;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 状态标签 */
.status-badge {
  display: inline-block;
  padding: 4px 12px;
  border-radius: var(--radius-full);
  font-size: 12px;
  font-weight: var(--font-weight-medium);
}

.status-badge.pending {
  background-color: var(--warning-light);
  color: var(--warning-color);
}

.status-badge.in_progress {
  background-color: var(--primary-100);
  color: var(--primary-color);
}

.status-badge.completed {
  background-color: var(--success-50);
  color: var(--success-color);
}

.status-badge.cancelled {
  background-color: var(--error-100);
  color: var(--error-dark);
}

/* 操作日志 */
.activity-log {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 24px;
  box-shadow: var(--shadow-sm);
}

.log-item {
  display: flex;
  gap: 16px;
  padding: 16px 0;
  border-bottom: 1px solid var(--border-light);
}

.log-item:last-child {
  border-bottom: none;
}

.log-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-top: 4px;
}

.log-content {
  flex: 1;
}

.log-action {
  font-size: 14px;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.log-time {
  font-size: 12px;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: var(--text-secondary);
  text-align: center;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.empty image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24px;
  opacity: 0.5;
}

.empty-title {
  font-size: 18px;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 12px;
}

.empty-text {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 24px;
  line-height: 1.5;
}
