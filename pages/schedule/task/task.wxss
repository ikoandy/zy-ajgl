/* pages/schedule/task/task.wxss */

/* 任务容器 */
.task-container {
  background-color: #f7fafc;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #1a365d;
  color: white;
  padding: 20rpx 32rpx;
  height: 88rpx;
  box-sizing: border-box;
}

.back-button {
  font-size: 28rpx;
  color: white;
  cursor: pointer;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.nav-right {
  font-size: 28rpx;
  color: white;
  cursor: pointer;
}

/* 任务表单 */
.task-form {
  padding: 24rpx;
  background-color: white;
  border-radius: 16rpx;
  margin: 24rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

/* 表单项目 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-sizing: border-box;
  background-color: white;
  overflow: visible;
  text-overflow: clip;
  line-height: 1.5;
  white-space: nowrap;
  min-height: 80rpx;
}

.form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-sizing: border-box;
  background-color: white;
  min-height: 160rpx;
  resize: vertical;
  font-family: inherit;
  line-height: 1.5;
  white-space: normal;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2d3748;
  box-sizing: border-box;
  background-color: white;
  overflow: visible;
  text-overflow: clip;
  line-height: 1.5;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  flex: 1;
  text-align: left;
  color: #2d3748;
}

/* 单选组 */
.radio-group {
  display: flex;
  gap: 40rpx;
  flex-wrap: wrap;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #2d3748;
  cursor: pointer;
}

/* 表单按钮 */
.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.cancel-button, .submit-button, .complete-button {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.cancel-button {
  background-color: white;
  color: #718096;
  border: 1px solid #e2e8f0;
}

.submit-button {
  background-color: #1a365d;
  color: white;
  border: none;
}

.complete-button {
  width: 100%;
  margin-top: 24rpx;
  background-color: #38a169;
  color: white;
  border: none;
}

.submit-button:active, .complete-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.cancel-button:active {
  background-color: #f7fafc;
}
