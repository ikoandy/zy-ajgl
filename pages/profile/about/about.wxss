/* pages/profile/about/about.wxss */
.about-container {
  padding: 20px;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 应用信息卡片 */
.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-xl);
  padding: 40px 20px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-lg);
  background-color: var(--border-light);
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 60rpx;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}

.app-name {
  font-size: 24px;
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 8px;
  text-align: center;
}

.app-description {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin-bottom: 20px;
  text-align: center;
  line-height: var(--line-height-normal);
}

.version-info {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: 8px;
}

.build-info {
  font-size: var(--font-size-xs);
  color: var(--text-disabled);
}

/* 通用区块样式 */
.section {
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  padding: 24px;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24px;
}

.section-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border-light);
}

/* 关于内容 */
.about-content {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 24px;
}

/* 功能介绍 */
.features-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.feature-item {
  display: flex;
  gap: 16px;
  padding: 16px;
  background-color: var(--background-color);
  border-radius: var(--radius-base);
  transition: all 0.3s;
}

.feature-item:active {
  background-color: var(--border-light);
  transform: scale(0.98);
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-top: 4px;
}

.feature-info {
  flex: 1;
}

.feature-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 8px;
}

.feature-description {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

/* 联系信息 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px 0;
  border-bottom: 1px solid var(--border-light);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.contact-details {
  flex: 1;
}

.contact-label {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: 4px;
}

.contact-value {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  font-weight: var(--font-weight-medium);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 链接列表 */
.links-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.link-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background-color: var(--background-color);
  border-radius: var(--radius-base);
  transition: all 0.3s;
}

.link-item:active {
  background-color: var(--border-light);
  transform: scale(0.98);
}

.link-text {
  font-size: var(--font-size-base);
  color: var(--primary-color);
  font-weight: var(--font-weight-medium);
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 版权信息 */
.copyright-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  margin-top: 24px;
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
  text-align: center;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
}

.copyright-text {
  margin-bottom: 8px;
  line-height: var(--line-height-normal);
}

.legal-links {
  display: flex;
  gap: 20px;
  margin-top: 12px;
}

.legal-link {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  text-decoration: underline;
  transition: all 0.3s;
}

.legal-link:active {
  color: var(--primary-color);
}

/* 社交媒体 */
.social-media {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin-top: 24px;
  padding: 24px;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
}

.social-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px;
  border-radius: var(--radius-base);
  transition: all 0.3s;
}

.social-item:active {
  background-color: var(--background-color);
  transform: scale(0.95);
}

.social-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
}

.social-name {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

/* 免责声明 */
.disclaimer {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  line-height: 1.6;
  margin-top: 24px;
  padding: 20px;
  background-color: var(--background-color);
  border-radius: var(--radius-base);
  border-left: 4px solid var(--border-dark);
}

.disclaimer-title {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--text-secondary);
  margin-bottom: 12px;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: var(--text-secondary);
}

.loading text {
  margin-top: 20px;
  font-size: var(--font-size-sm);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: var(--text-secondary);
  text-align: center;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty text {
  font-size: var(--font-size-sm);
  margin-bottom: 8px;
}
