/* pages/profile/info/info.wxss */
.profile-container {
  padding: 20rpx;
  background-color: #f7fafc;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-info-card {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 用户头像 */
.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #ebf8ff;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: 4rpx solid #3182ce;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-text {
  font-size: 60rpx;
  font-weight: 600;
  color: #3182ce;
}

.avatar-edit {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background-color: rgba(26, 54, 93, 0.9);
  color: #ffffff;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
  touch-action: manipulation;
}

/* 用户基本信息 */
.user-basic-info {
  text-align: center;
  margin-bottom: 32rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #2d3748;
  margin: 0;
}

.user-role {
  font-size: 32rpx;
  color: #718096;
  margin: 0;
  padding: 8rpx 24rpx;
  background-color: #f7fafc;
  border-radius: 9999rpx;
}

.user-email {
  font-size: 28rpx;
  color: #a0aec0;
  margin: 0;
  word-break: break-word;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 统计数据 */
.stats-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding-top: 32rpx;
  border-top: 1px solid #edf2f7;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #2d3748;
  margin: 0;
}

.stat-label {
  font-size: 28rpx;
  color: #718096;
  margin: 0;
}

/* 通用区块样式 */
.section {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 24px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #edf2f7;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-action {
  font-size: 28rpx;
  color: #3182ce;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
}

/* 个人资料详情 */
.profile-details {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1px solid #edf2f7;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
  touch-action: manipulation;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item:active {
  background-color: #f7fafc;
  transform: scale(0.98);
  transition: all 0.2s ease;
}

.detail-label {
  font-size: 16px;
  color: #718096;
  font-weight: 500;
}

.detail-value {
  font-size: 16px;
  color: #2d3748;
  text-align: right;
  flex: 1;
  margin-left: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 9999px;
  font-size: 12px;
  font-weight: 500;
}

.tag-primary {
  background-color: #ebf8ff;
  color: #3182ce;
}

/* 操作按钮 */
.action-button {
  width: 100%;
  height: 88rpx;
  background-color: #3182ce;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
  touch-action: manipulation;
}

.action-button:active {
  background-color: #2c5282;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: #718096;
}

.loading text {
  margin-top: 20px;
  font-size: 14px;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: #718096;
  text-align: center;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty text {
  font-size: 14px;
  margin-bottom: 8px;
}

/* 编辑表单样式 */
.edit-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.field-label {
  font-size: 16px;
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
}

.input-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-size: 16px;
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  transition: all 0.3s;
}

.input-field:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.input-field::placeholder {
  color: var(--text-tertiary);
}

.textarea-field {
  width: 100%;
  padding: 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-size: 16px;
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  min-height: 120px;
  resize: vertical;
  transition: all 0.3s;
}

.textarea-field:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.textarea-field::placeholder {
  color: var(--text-tertiary);
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 16px;
  margin-top: 24px;
}

.form-btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-lg);
  font-size: 16px;
  font-weight: var(--font-weight-medium);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--background-white);
}

.btn-primary:active {
  background-color: var(--primary-light);
  transform: scale(0.98);
}

.btn-secondary {
  background-color: var(--secondary-100);
  color: var(--text-secondary);
}

.btn-secondary:active {
  background-color: var(--border-color);
  transform: scale(0.98);
}
