<!--pages/profile/settings/settings.wxml-->
<view class="settings-container">
  <!-- 通用区块样式 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">账号设置</text>
    </view>
    
    <view class="settings-list">
      <view class="setting-item" bindtap="handleEditProfile">
        <view class="setting-label">
          <text class="setting-text">编辑资料</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">修改个人信息</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
      
      <view class="setting-item" bindtap="handleChangePassword">
        <view class="setting-label">
          <text class="setting-text">修改密码</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">修改登录密码</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
      
      <view class="setting-item" bindtap="handleNotification">
        <view class="setting-label">
          <text class="setting-text">消息通知</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">管理消息通知</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
    </view>
  </view>
  
  <view class="section">
    <view class="section-header">
      <text class="section-title">系统设置</text>
    </view>
    
    <view class="settings-list">
      <view class="setting-item" bindtap="handleLanguage">
        <view class="setting-label">
          <text class="setting-text">语言设置</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">中文</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
      
      <view class="setting-item" bindtap="handleTheme">
        <view class="setting-label">
          <text class="setting-text">主题设置</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">默认主题</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
      
      <view class="setting-item" bindtap="handleClearCache">
        <view class="setting-label">
          <text class="setting-text">清除缓存</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">12.3MB</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
      
      <view class="setting-item" bindtap="handleAbout">
        <view class="setting-label">
          <text class="setting-text">关于我们</text>
        </view>
        <view class="setting-action">
          <text class="setting-desc">版本 1.0.0</text>
          <text class="setting-arrow">></text>
        </view>
      </view>
    </view>
  </view>
  
  <view class="section">
    <view class="setting-item setting-item-danger" bindtap="handleLogout">
      <view class="setting-label">
        <text class="setting-text setting-text-danger">退出登录</text>
      </view>
      <view class="setting-action">
        <text class="setting-arrow setting-arrow-danger">></text>
      </view>
    </view>
  </view>
</view>