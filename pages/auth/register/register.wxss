/* pages/auth/register/register.wxss */
.register-container {
  padding: calc(40rpx + env(safe-area-inset-top)) 40rpx calc(40rpx + env(safe-area-inset-bottom));
  background-color: var(--background-color);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

/* 页面标题 */
.page-title {
  font-size: 48rpx;
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 80rpx;
  text-align: center;
}

/* 注册表单 */
.register-form {
  width: 100%;
  max-width: 640rpx;
  background-color: var(--background-white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 64rpx;
  box-shadow: var(--shadow-sm);
  box-sizing: border-box;
}

/* 表单字段 */
.form-field {
  margin-bottom: 48rpx;
}

.field-label {
  display: block;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  padding: 32rpx;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  box-sizing: border-box;
  background-color: var(--background-white);
  transition: all 0.3s;
}

.input-field:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.input-field::placeholder {
  color: var(--text-tertiary);
}

/* 密码可见性切换 */
.password-field {
  position: relative;
}

.toggle-password {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
  opacity: 0.7;
  transition: opacity 0.3s;
}

.toggle-password:active {
  opacity: 1;
}

/* 验证码输入 */
.verification-code {
  display: flex;
  gap: 32rpx;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  padding: 0 40rpx;
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  transition: all 0.3s;
  white-space: nowrap;
  height: 88rpx;
  line-height: 88rpx;
}

.send-code-btn:active {
  background-color: var(--primary-dark);
  transform: scale(0.98);
}

.send-code-btn:disabled {
  background-color: var(--border-dark);
  color: var(--text-secondary);
  cursor: not-allowed;
}

/* 条款同意 */
.terms-agreement {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  margin-bottom: 48rpx;
  padding: 32rpx;
  background-color: var(--background-color);
  border-radius: var(--radius-base);
}

.checkbox {
  margin-top: 4px;
  transform: scale(1.2);
}

.terms-text {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

.terms-link {
  color: var(--primary-color);
  text-decoration: underline;
  font-weight: var(--font-weight-medium);
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--radius-base);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  transition: all 0.3s;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-btn:active {
  background-color: var(--primary-dark);
  transform: scale(0.98);
}

.register-btn:disabled {
  background-color: var(--border-dark);
  color: var(--text-secondary);
  cursor: not-allowed;
}

/* 登录链接 */
.login-link {
  text-align: center;
  font-size: var(--font-size-base);
  color: var(--text-secondary);
}

.login-link-text {
  color: var(--primary-color);
  font-weight: var(--font-weight-medium);
  text-decoration: none;
}

/* 错误提示 */
.error-message {
  color: var(--error-color);
  font-size: var(--font-size-sm);
  margin-top: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.error-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

/* 成功提示 */
.success-message {
  color: var(--success-color);
  font-size: var(--font-size-sm);
  margin-top: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.success-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.loading-text {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

/* 第三方登录 */
.third-party-login {
  margin-top: 64rpx;
  text-align: center;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background-color: var(--border-light);
}

.divider::before {
  margin-right: 32rpx;
}

.divider::after {
  margin-left: 32rpx;
}

.social-login {
  display: flex;
  justify-content: center;
  gap: 48rpx;
}

.social-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--background-color);
  border: 1px solid var(--border-color);
  border-radius: 50%;
  transition: all 0.3s;
}

.social-btn:active {
  background-color: var(--border-light);
  transform: scale(0.95);
}

.social-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.7;
}
