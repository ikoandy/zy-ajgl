/* pages/messages/list/list.wxss */
.messages-container {
  padding: 20rpx;
  background-color: #f7fafc;
  min-height: 100vh;
}

/* 通用区块样式 */
.section {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 24rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #edf2f7;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #2d3748;
}

.section-more {
  font-size: 14px;
  color: #1a365d;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 9999px;
  padding: 0 20rpx;
  height: 80rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  border: 1px solid #e2e8f0;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #718096;
  background-color: #f7fafc;
  border-radius: 50%;
  border: 1px solid #e2e8f0;
}

.input {
  flex: 1;
  font-size: 16px;
  color: #2d3748;
  height: 100%;
}

.input::placeholder {
  color: #a0aec0;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #a0aec0;
  background-color: #f7fafc;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.clear-icon:active {
  background-color: #edf2f7;
  color: #718096;
}

/* 消息列表 */
.message-list {
  display: flex;
  flex-direction: column;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-start;
  padding: 20px;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  margin-bottom: 16px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.message-item:active {
  background-color: #f7fafc;
  transform: scale(0.98);
}

/* 消息头像 */
.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ebf8ff;
  margin-right: 24px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #3182ce;
}

/* 消息内容 */
.message-content {
  flex: 1;
  min-width: 0;
  margin-right: 20px;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.sender-info {
  display: flex;
  align-items: center;
}

.sender-name {
  font-size: 16px;
  font-weight: 600;
  color: #2d3748;
  margin-right: 12rpx;
}

.message-time {
  font-size: 12px;
  color: #a0aec0;
  margin-top: 4px;
}

.message-preview {
  font-size: 14px;
  color: #718096;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 未读标记 */
.unread-badge {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #e53e3e;
  margin-left: 8px;
  margin-top: 6px;
  flex-shrink: 0;
}

/* 加载状态 */
.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: #718096;
}

.loading text, .empty text {
  margin-top: 20px;
  font-size: 14px;
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20px;
  opacity: 0.5;
}

/* 加载更多 */
.loading-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px 0;
  color: #718096;
  font-size: 14px;
}

.loading-more van-loading {
  margin-right: 16px;
}
