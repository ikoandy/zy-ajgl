/* pages/messages/detail/detail.wxss */
.message-container {
  padding: 20px;
  background-color: #f7fafc;
  min-height: 100vh;
}

/* 通用区块样式 */
.section {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 24px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 24px;
}

/* 消息头部 */
.message-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid #edf2f7;
}

.sender-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ebf8ff;
  margin-right: 20px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #3182ce;
}

.sender-info {
  flex: 1;
}

.sender-name {
  font-size: 18px;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4px;
}

.message-meta {
  display: flex;
  align-items: center;
  gap: 20px;
  font-size: 14px;
  color: #718096;
}

.message-time {
  color: #a0aec0;
}

.status-badge {
  padding: 4px 12px;
  border-radius: 9999px;
  font-size: 12px;
  font-weight: 500;
}

.status-badge.unread {
  background-color: #ebf8ff;
  color: #3182ce;
}

.status-badge.read {
  background-color: #f7fafc;
  color: #718096;
}

/* 消息内容 */
.message-content {
  font-size: 16px;
  line-height: 1.6;
  color: #2d3748;
  margin-bottom: 24px;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 消息附件 */
.message-attachments {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-bottom: 24px;
}

.attachment-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background-color: #f7fafc;
  border: 1px solid #edf2f7;
  border-radius: 8px;
  transition: all 0.3s;
  max-width: 100%;
}

.attachment-item:active {
  background-color: #edf2f7;
  transform: scale(0.98);
}

.attachment-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  font-size: 28rpx;
}

.attachment-info {
  flex: 1;
  min-width: 0;
}

.attachment-name {
  font-size: 14px;
  color: #2d3748;
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.attachment-size {
  font-size: 12px;
  color: #a0aec0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16px;
  margin-bottom: 24px;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: #3182ce;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #2c5282;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #ebf8ff;
  color: #718096;
}

.btn-secondary:active {
  background-color: #e2e8f0;
  transform: scale(0.98);
}

/* 回复区域 */
.reply-section {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 24px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #edf2f7;
}

.reply-title {
  font-size: 16px;
  font-weight: 600;
  color: #2d3748;
}

.reply-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.reply-textarea {
  width: 100%;
  padding: 16px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 16px;
  color: #2d3748;
  box-sizing: border-box;
  background-color: #ffffff;
  min-height: 120px;
  resize: vertical;
  transition: all 0.3s;
}

.reply-textarea:focus {
  outline: none;
  border-color: #3182ce;
  box-shadow: 0 0 0 3px #ebf8ff;
}

.reply-textarea::placeholder {
  color: #a0aec0;
}

.reply-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16px;
}

/* 历史消息 */
.history-messages {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 24px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 24px;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid #edf2f7;
}

.history-title {
  font-size: 16px;
  font-weight: 600;
  color: #2d3748;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.history-item {
  display: flex;
  align-items: flex-start;
}

.history-item.received {
  justify-content: flex-start;
}

.history-item.sent {
  justify-content: flex-end;
}

.history-bubble {
  max-width: 70%;
  padding: 16px;
  border-radius: 16px;
  position: relative;
}

.history-item.received .history-bubble {
  background-color: #f7fafc;
  border-bottom-left-radius: 4px;
}

.history-item.sent .history-bubble {
  background-color: #3182ce;
  color: #ffffff;
  border-bottom-right-radius: 4px;
}

.history-sender {
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 8px;
}

.history-item.received .history-sender {
  color: #718096;
}

.history-item.sent .history-sender {
  color: #a0aec0;
}

.history-content {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 8px;
}

.history-item.received .history-content {
  color: #2d3748;
}

.history-item.sent .history-content {
  color: #ffffff;
}

.history-time {
  font-size: 12px;
  text-align: right;
}

.history-item.received .history-time {
  color: #a0aec0;
}

.history-item.sent .history-time {
  color: rgba(255, 255, 255, 0.7);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: #718096;
}

.loading text {
  margin-top: 20px;
  font-size: 14px;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: #718096;
  text-align: center;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.empty image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24px;
  opacity: 0.5;
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12px;
}

.empty-text {
  font-size: 14px;
  color: #718096;
  margin-bottom: 24px;
  line-height: 1.5;
}
