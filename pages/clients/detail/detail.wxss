/* pages/clients/detail/detail.wxss */
.client-detail-container {
  padding: 20rpx;
  background-color: var(--background-color);
  min-height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding-bottom: 120rpx;
}

/* 客户基本信息卡片 */
.client-header-card {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  box-shadow: var(--shadow-md);
  margin-bottom: 20rpx;
  border: 1px solid var(--border-light);
}

.client-basic-info {
  margin-bottom: 20rpx;
}

.client-title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.client-name {
  font-size: 32rpx;
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-right: 16rpx;
}

.client-status {
  /* 统一基础样式 */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: var(--font-weight-semibold);
  height: 36rpx;
  border-radius: 18rpx;
  border: 1px solid transparent;
  padding: 0 18rpx;
  margin: 0;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  min-width: 88rpx;
  line-height: 1;
}

/* 统一状态样式 */
.client-status.new {
  background-color: var(--info-light);
  color: var(--info-color);
  border-color: var(--primary-100);
}

.client-status.active {
  background-color: var(--success-light);
  color: var(--success-color);
  border-color: var(--success-light);
}

.client-status.inactive {
  background-color: var(--secondary-100);
  color: var(--text-secondary);
  border-color: var(--border-color);
}

.client-contact-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.client-contact {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 统计数据 */
.client-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-light);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx !important;
  font-size: 28rpx !important;
  font-weight: var(--font-weight-medium) !important;
  background-color: var(--primary-color) !important;
  color: var(--background-white) !important;
  border-radius: var(--radius-base) !important;
  transition: all 0.3s ease !important;
  line-height: 80rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box !important;
  gap: 10rpx;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
  touch-action: manipulation;
}

.action-button::after {
  border: none !important;
  border-radius: var(--radius-base) !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  transform: none !important;
}

.action-button:active {
  background-color: var(--primary-light) !important;
  box-shadow: var(--shadow-md) !important;
  transform: translateY(1rpx) !important;
}

.action-button:hover {
  background-color: var(--primary-light) !important;
  box-shadow: var(--shadow-md) !important;
}

.button-icon-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.button-icon-text {
  font-size: 24rpx;
  font-weight: var(--font-weight-bold);
  color: var(--background-white);
  line-height: 1;
}

.action-button:active .button-icon-circle {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.button-text {
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  vertical-align: middle;
  color: var(--background-white);
}

/* 标签切换 */
.tab-container {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  border: 1px solid var(--border-light);
}

.tab-bar {
  display: flex;
  border-bottom: 1rpx solid var(--border-light);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  color: var(--text-secondary);
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--primary-color);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  padding: 24rpx;
}

/* 信息标签内容 */
.info-section {
  margin-bottom: 32rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: block;
}

.section-content {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: var(--line-height-relaxed);
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  min-width: 120rpx;
  color: var(--text-tertiary);
}

.detail-value {
  color: var(--text-primary);
  flex: 1;
}

/* 案件列表标签内容 */
.cases-section {
  width: 100%;
}

.cases-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.case-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: var(--background-light);
  border-radius: var(--radius-base);
  transition: all 0.3s ease;
  border: 1px solid var(--border-light);
}

.case-item:active {
  background-color: var(--border-light);
  transform: scale(0.98);
}

.case-info {
  flex: 1;
  margin-right: 16rpx;
}

.case-title {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: var(--font-weight-medium);
  display: block;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.case-meta {
  font-size: 22rpx;
  color: var(--text-tertiary);
  display: block;
}

/* 跟进记录标签内容 */
.follow-section {
  width: 100%;
}

.follow-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.follow-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.follow-item:last-child {
  border-bottom: none;
}

.follow-item:active .follow-content {
  opacity: 0.8;
}

.follow-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  margin-top: 8rpx;
  flex-shrink: 0;
}

.follow-content {
  flex: 1;
  transition: opacity 0.3s ease;
}

.follow-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.follow-type {
  font-size: 26rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.follow-time {
  font-size: 20rpx;
  color: var(--text-tertiary);
}

.follow-details {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: var(--line-height-relaxed);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-secondary);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid var(--border-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-tertiary);
  gap: 20rpx;
}

.empty text {
  font-size: 24rpx;
  margin-bottom: 0;
}

