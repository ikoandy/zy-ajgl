/* pages/clients/follow/follow.wxss */

/* 页面容器 */
.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 20rpx;
}

/* 客户信息卡片 */
.client-info-card {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.client-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.client-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-100);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  margin-right: 24rpx;
}

.client-basic-info {
  flex: 1;
}

.client-name {
  font-size: 36rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.client-contact {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

/* 跟进记录列表 */
.follow-list {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
}

.follow-list-header {
  padding: 24rpx 32rpx;
  border-bottom: 1px solid var(--border-light);
  font-size: 32rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.follow-item {
  padding: 32rpx;
  border-bottom: 1px solid var(--border-light);
}

.follow-item:last-child {
  border-bottom: none;
}

.follow-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.follow-info {
  display: flex;
  align-items: center;
}

.follow-user {
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-right: 16rpx;
}

.follow-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.follow-type {
  padding: 6rpx 16rpx;
  border-radius: var(--radius-full);
  font-size: 20rpx;
  font-weight: var(--font-weight-medium);
}

.follow-type.call {
  background-color: var(--primary-50);
  color: var(--primary-color);
}

.follow-type.visit {
  background-color: var(--success-light);
  color: white;
}

.follow-type.email {
  background-color: var(--info-light);
  color: white;
}

.follow-type.other {
  background-color: var(--secondary-light);
  color: white;
}

.follow-content {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: var(--line-height-normal);
  margin-bottom: 16rpx;
}

.follow-attachments {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.attachment-item {
  width: 120rpx;
  height: 120rpx;
  background-color: var(--background-light);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: var(--text-tertiary);
}

/* 添加跟进记录表单 */
.add-follow-form {
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  padding: 32rpx;
  margin-bottom: 100rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 28rpx;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--background-white);
  box-sizing: border-box;
}

.input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3rpx var(--primary-100);
}

/* 文本域样式 */
.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--background-white);
  box-sizing: border-box;
  resize: vertical;
  font-family: var(--font-family-base);
}

.textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3rpx var(--primary-100);
}

/* 选择器样式 */
.picker {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-base);
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--background-white);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.picker::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid var(--text-tertiary);
  border-right: 2px solid var(--text-tertiary);
  transform: rotate(135deg);
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--background-white);
  border-top: 1px solid var(--border-color);
  padding: 20rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: var(--radius-base);
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: white;
}

.btn-secondary:active {
  background-color: var(--secondary-dark);
}

/* 标签选择器 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 12rpx;
}

.tag-option {
  padding: 12rpx 24rpx;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-full);
  font-size: 28rpx;
  color: var(--text-secondary);
  background-color: var(--background-white);
}

.tag-option.selected {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: var(--primary-50);
}

/* 空状态 */
.empty-state {
  padding: 100rpx 20rpx;
  text-align: center;
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.empty-icon {
  font-size: 120rpx;
  color: var(--text-disabled);
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-bottom: 8rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--text-disabled);
}

/* 加载状态 */
.loading {
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--background-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-left: 12rpx;
}

/* 附件上传区域 */
.upload-area {
  border: 2rpx dashed var(--border-color);
  border-radius: var(--radius-base);
  padding: 40rpx;
  text-align: center;
  background-color: var(--background-light);
}

.upload-icon {
  font-size: 64rpx;
  color: var(--text-tertiary);
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: var(--text-tertiary);
}
