/* 页面容器 */
.create-container {
  background-color: #f7fafc;
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 自定义标题栏 - 色块显示 */
.custom-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #1a365d;
  padding: 60rpx 32rpx;
  margin-bottom: 0;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 右侧占位 */
.custom-right {
  width: 60rpx;
}

/* 固定标题色块 - 固定显示标题 */
.fixed-title-section {
  background-color: #1a365d;
  padding: 32rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

/* 自定义返回按钮 */
.custom-back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.3);
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.custom-back-button:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-50%) scale(0.95);
}

.custom-back-icon {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.fixed-title {
  font-size: 18px;
  font-weight: 700;
  color: white;
  display: block;
  text-align: center;
  line-height: 1.4;
}

/* 底部保存按钮 */
.bottom-save-button {
  position: fixed;
  bottom: calc(20rpx + env(safe-area-inset-bottom));
  left: 32rpx;
  right: 32rpx;
  height: 90rpx;
  background-color: #1a365d;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  transition: all 0.3s ease;
  font-weight: 600;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  z-index: 99;
  border: none;
}

.bottom-save-button:active {
  background-color: #1a365d;
  transform: scale(0.98);
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.save-text {
  font-size: 18px;
  color: white;
  font-weight: 600;
}

/* 创建表单 */
.create-form {
  padding: 0 32rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  overflow-x: visible;
}

/* 表单区块 */
.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 36rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  border: 1px solid #edf2f7;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

/* 区块标题 */
.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a365d;
  margin-bottom: 24rpx;
  display: block;
  padding-bottom: 12rpx;
  border-bottom: 2px solid #edf2f7;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  font-size: 14px;
  font-weight: 500;
  color: #2d3748;
  margin-bottom: 12rpx;
  display: block;
  line-height: 1.4;
}

/* 输入框样式 */
.form-input, .form-textarea {
  width: 100%;
  padding: 16rpx 16rpx;
  border: 1px solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 16px;
  color: #2d3748;
  box-sizing: border-box;
  background-color: #ffffff;
  transition: all 0.3s ease;
  font-family: inherit;
  line-height: 1.5;
  overflow: visible;
  text-overflow: clip;
  white-space: normal;
  min-height: 90rpx;
}

/* 输入框聚焦效果 */
.form-input:focus, .form-textarea:focus {
  outline: none;
  border-color: #1a365d;
  box-shadow: 0 0 0 3rpx rgba(26, 54, 93, 0.1);
  background-color: #ffffff;
}

/* 输入框占位符 */
.form-input::placeholder, .form-textarea::placeholder {
  color: #a0aec0;
  font-size: 14px;
}

/* 多行文本输入框 */
.form-textarea {
  min-height: 180rpx;
  resize: vertical;
  line-height: 1.75;
}

/* 选择器容器 */
.status-selector, .type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 8rpx;
}

/* 选择器选项 */
.status-option, .type-option {
  padding: 16rpx 32rpx;
  border: 1px solid #e2e8f0;
  border-radius: 9999rpx;
  font-size: 14px;
  color: #718096;
  font-weight: 500;
  transition: all 0.3s ease;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  background-color: #ffffff;
  flex-shrink: 0;
}

/* 选择器选项激活状态 */
.status-option.active {
  background-color: #38a169;
  color: white;
  border-color: #38a169;
  box-shadow: 0 2rpx 8rpx rgba(56, 161, 105, 0.3);
}

.type-option.active {
  background-color: #1a365d;
  color: white;
  border-color: #1a365d;
  box-shadow: 0 2rpx 8rpx rgba(26, 54, 93, 0.3);
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 40rpx 50rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #edf2f7;
  border-top-color: #1a365d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 16px;
  color: #2d3748;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .form-section {
    padding: 24rpx;
  }
  
  .section-title {
    font-size: 16px;
    margin-bottom: 20rpx;
  }
  
  .form-input, .form-textarea {
    font-size: 14px;
    padding: 14rpx 18rpx;
  }
  
  .status-option, .type-option {
    padding: 12rpx 24rpx;
    font-size: 12px;
  }
}
