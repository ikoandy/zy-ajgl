/* pages/index/index.wxss */
.index-container {
  padding: 20rpx 20rpx;
  background-color: #f7fafc;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* 居中容器 */
.index-container > view {
  width: 100%;
  max-width: 750rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 用户头部 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  background-color: #edf2f7;
  border: 4rpx solid #1a365d;
}

/* 头像文本容器样式 */
.avatar-text-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 40rpx;
  border: 4rpx solid #1a365d;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: var(--font-weight-bold);
  color: var(--background-white);
  line-height: 1;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 4rpx;
}

.user-role {
  font-size: 28rpx;
  color: #718096;
  background-color: #f7fafc;
  padding: 2rpx 24rpx;
  border-radius: 9999rpx;
  display: inline-block;
}

.header-actions {
  display: flex;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 64rpx;
  background-color: #f7fafc;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2d3748;
  font-size: 24rpx;
  font-weight: bold;
  border: 1px solid #e2e8f0;
  transition: all 0.3s ease;
}

.icon:active {
  background-color: #edf2f7;
  transform: scale(0.98);
}

.settings-icon {
  background-color: #f7fafc;
}

.message-badge {
  position: relative;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #e53e3e;
  color: white;
  font-size: 24rpx;
  font-weight: 700;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 9999rpx;
  padding: 0 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 16rpx;
  padding: 48rpx 20rpx;
  box-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  height: 160rpx;
  justify-content: center;
  background-color: #f7fafc;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1px solid #e2e8f0;
}

.action-item:active {
  background-color: #edf2f7;
  transform: scale(0.98);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
  background-color: #1a365d;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.action-text {
  font-size: 28rpx;
  color: #718096;
  font-weight: 500;
}

/* 通用区块样式 */
.section {
  background-color: #ffffff;
  border: 1px solid #e2e8f0;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #edf2f7;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-more {
  font-size: 28rpx;
  color: #1a365d;
}

/* 案件列表 */
.case-list {
  display: flex;
  flex-direction: column;
}

.case-item {
  padding: 40rpx 0;
  border-bottom: 1px solid #edf2f7;
}

.case-item:last-child {
  border-bottom: none;
}

.case-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.case-title {
  font-size: 32rpx;
  color: #2d3748;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 40rpx;
}

.case-status {
  /* 统一基础样式 */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  height: 36rpx;
  border-radius: 18rpx;
  border: 1px solid transparent;
  padding: 0 18rpx;
  margin: 0;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  min-width: 88rpx;
  line-height: 1;
}

.case-status:empty {
  display: none;
}

/* 统一状态样式 */
.case-status[data-status="pending"] {
  background-color: #fffaf0;
  color: #d69e2e;
  border-color: #ecc94b;
}

.case-status[data-status="processing"] {
  background-color: #ebf8ff;
  color: #1a365d;
  border-color: #bee3f8;
}

.case-status[data-status="completed"] {
  background-color: #f0fff4;
  color: #38a169;
  border-color: #48bb78;
}

.case-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.case-client, .case-date {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 任务列表 */
.task-list {
  display: flex;
  flex-direction: column;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1px solid #edf2f7;
}

.task-item:last-child {
  border-bottom: none;
}

.task-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #1a365d;
  margin-right: 40rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 32rpx;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.task-time {
  font-size: 24rpx;
  color: #a0aec0;
  display: block;
}

/* 加载和空状态 */
.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #718096;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #1a365d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading text, .empty text {
  margin-top: 40rpx;
  font-size: 28rpx;
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.create-btn {
  width: 60%;
  border-radius: 9999rpx;
  font-weight: 500;
  margin-top: 20rpx;
  background-color: #1a365d !important;
  color: white !important;
}