# 前端服务Dockerfile
FROM nginx:alpine

# 复制所有前端项目的构建产物
COPY admin-pc/dist/ /usr/share/nginx/html/admin/
COPY lawyer-pc/dist/ /usr/share/nginx/html/lawyer/
COPY mobile-h5/dist/ /usr/share/nginx/html/mobile/

# 复制Nginx配置文件
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 80

# 启动Nginx
CMD ["nginx", "-g", "daemon off;"]